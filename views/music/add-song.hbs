<form action="/songs" method="POST" id="upload-form" enctype="multipart/form-data">
    <label for="title">Title:</label>
    <input type="text" name="title">

    <label for="songFileURL">Song file:</label>
    <input type="file" name="songFileURL">
    {{!-- <input type="submit"> --}}

   {{!-- <label for="author">Author:</label>
    <input type="text" name="author">
 --}}

    <label for="genre">Genre:</label>
    <select name="genre">
    <option value="rock">Rock</option>
    <option value="techno">Techno</option>
    <option value="pop">Pop</option>
    <option value="indie">Indie</option>
    </select>

    <label for="coverImgURL">Cove image file:</label>
    <input type="file" name="coverImgURL">
    {{!-- <input type="submit"> --}}

    <button type="submit">Upload song</button>

</form>

{{#if message}}
	<h3 class="error">{{message}}</h3>
{{/if}}
